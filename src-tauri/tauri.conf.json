{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "base_station",
  "version": "0.1.0",
  "identifier": "com.base_station.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "base_station",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "img-src": "'self' http://localhost:5000 http://localhost:5001 http://localhost:5002",
        "media-src": "'self' http://localhost:5000 http://localhost:5001 http://localhost:5002",
        "asset": "https://asset.localhost"
      },
      "dangerousDisableAssetCspModification": true,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$APPDATA/images/**"]
      }
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
